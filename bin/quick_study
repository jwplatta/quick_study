#!/usr/bin/env ruby

require 'quick_study'
require 'optparse'
require 'pry'

OptionParser.new do |opts|
  opts.banner = 'Usage: quick_study [options]'

  opts.on('-h', '--help', 'Prints this help') do
    puts opts
    exit
  end

  opts.on('-c', '--config', 'Configure study area') do
    puts 'Configuring the study area'
    exit
  end

  opts.on('-r', '--review', 'Start a new review') do
    require 'quick_study/app/review_app.rb'
    exit
  end
end.parse!
